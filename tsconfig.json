{
	"compilerOptions": {
		"target": "es6",
		"module": "es2015",
		"moduleResolution": "node",
		//"resolveJsonModule": true,
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"noImplicitAny": false,
		"noImplicitThis": true,
		"outDir": "./dist",
		"baseUrl": ".",
		"paths": {}
	},
	"include": [
		"./src/**/*"
	],
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	]
}